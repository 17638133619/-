.box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.img{
  width: 100%;
  height: 350rpx;
  background: gray;
  z-index: 1;
}
.img image{
  width: 100%;
  height: 350rpx;
}
.porject{
  z-index: 10;
  width: 90%;
  height: 760rpx;
  background: rgb(248, 245, 245);
  margin-top: -10%;
  margin-left: 5%;
}
.index{
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}
.index view:nth-of-type(1){
  margin-left: 150rpx;
}
.index view:nth-of-type(1) image{
  width: 50rpx;
  height: 50rpx;
}
.index view:nth-of-type(2){
  margin-left: 20rpx;
  /* font-size: 1vm; */
  font-weight:bold;
  font-size: 32rpx;
  margin-top: 8rpx;
}
.work{
  width: 100%;
  display: flex;
  margin: 20rpx 0;
}
.image{
  margin-left: 125rpx;
}
.work view:nth-of-type(1) image{
  width: 100rpx;
  height: 120rpx;
}
.work view:nth-of-type(2){
  font-size: 32rpx;
  margin-top: 6px;
}